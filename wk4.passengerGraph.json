{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 290, "height": 290,
        "title": {
        "text": "Passenger count by major European airline and airline groups",
        "subtitle": "Data spans between 2006-2021 and is presented in millions. Source: Wikipedia (2022)",
        "fontSize": 13,
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "middle",
        "color": "#000000",
        "subtitleColor": "#000000"
      },
    "data": {"url": "https://raw.githubusercontent.com/AlKobayashi/AlKobayashi.github.io/main/wk4scrapingairlinewiki.csv"},
    
    
    "mark": "area",
    "encoding": {
      
      "tooltip": [
            {"field": "Airline", 
            "type": "nominal", 
            "title": "Airline"},
            {"field": "Year", 
            "type": "temporal", 
            "title": "Year"},
            {"field": "Passengers", 
            "type": "quantitative", 
            "title": "Passengers"}
          ],
      "x": {
        "type": "temporal", 
        "field": "Year", 
        "title": null
      },
      "y": {
        "aggregate": "sum", 
        "field": "Passengers", 
        "type": "quantitative", 
        "title":"Passengers (millions)"
      },
      "order": {"field": "orderOfData", 
      "type": "quantitative"},
      "color": {
        "field": "Airline",
        "scale": {"scheme": "magma"}
      }
    }
    
  }
  
